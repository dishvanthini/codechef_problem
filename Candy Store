#include <stdio.h>

int main() {
    int t;
    scanf("%d", &t);

    while (t--) {
        int x, y;
        scanf("%d %d", &x, &y);
        if(x>=y)
        {
            printf("%d\n",y*1);
        }
        else
        {  
            int tot=(y-x)*2;//6
            printf("%d\n",x+tot);
        }
    }
return 0;

}

