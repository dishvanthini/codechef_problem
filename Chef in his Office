#include <stdio.h>

int main() {
    int t,x,y,m2t;
    
    scanf("%d",&t);
    while(t--)
    {
    scanf("%d %d",&x,&y);
    m2t=x*4;
    printf("%d\n",m2t+y);
    }
return 0;
}
